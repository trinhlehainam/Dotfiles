set number
set scrolloff=8
set nohlsearch
set ignorecase

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent
set smartcase

let mapleader=' '

nnoremap <leader>rs :so ~/vimfiles/_vsvimrc<CR>

noremap ; l
noremap l k
noremap k j
noremap j h

inoremap <A-l> <ESC>la
inoremap <A-j> <ESC>i

inoremap jk <Esc>

noremap <leader>w :w<CR>
noremap <leader>q :q<CR>

nnoremap ' ;

" Tab Navigation
noremap t; :tablast<CR>
noremap tj :tabfirst<CR>
noremap tl :tabnext<CR>
noremap tk :tabprev<CR>

vnoremap > >gv=gv
vnoremap < <gv=gv

nnoremap <leader>; :vsc Window.NextDocumentWindow<CR>
nnoremap <leader>j :vsc Window.PreviousDocumentWindow<CR>
nnoremap <leader>k :vsc Window.NextSplitPane<CR>
nnoremap <leader>l :vsc Window.PreviousSplitPane<CR>

nnoremap <leader>ws :vsc Window.NewVerticalTabGroup<CR>
nnoremap <leader>wj :vsc Window.MoveToPreviousTabGroup<CR>
nnoremap <leader>w; :vsc Window.MoveToNextTabGroup<CR>

nnoremap <leader>cc :vsc Edit.ToggleBlockComment<CR>
vnoremap <leader>c :vsc Edit.ToggleBlockComment<CR>

nnoremap <leader>gd :vsc Edit.GotoDefinition <CR>
nnoremap <leader>fr :vsc Edit.FindAllReferences<CR>
nnoremap <leader>ff :vsc Edit.NavigateTo<CR>
nnoremap <leader>fw :vsc Window.Windows<CR>

nnoremap <leader>rn :vsc Refactor.Rename<CR>
nnoremap <leader>db :vsc Debug.Breakpoints<CR>
nnoremap <leader>dc :vsc Debug.CallStack<CR>

nnoremap <leader>cd :vsc Edit.CreateDeclarationDefinition<CR>
nnoremap <leader>sv :vsc Window.SplitWindowVertically<CR>
nnoremap <leader>sh :vsc Window.SplitWindowHorizontally<CR>

nnoremap se :vsc View.ErrorList<CR>
nnoremap so :vsc View.Output<CR>
nnoremap sd :vsc Edit.PeekDefinition<CR>
nnoremap ss :vsc Edit.ParameterInfo<CR>
nnoremap K :vsc Edit.QuickInfo<CR>
